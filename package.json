{
  "name": "koa-typescript-with-db",
  "version": "0.0.1",
  "description": "An extension of the koa-typescript-template",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean:dist && npm run build:ts",
    "build:ts": "tsc",
    "clean:dist": "rm -rf ./dist",
    "db:local:start": "./bin/tearDownTestDB.sh && docker run --name postgres-db-test-container -p 5432:5432 -e POSTGRES_DB=postgres_test -e POSTGRES_PASSWORD=pass -d postgres",
    "db:migrate": "npx sequelize-cli db:migrate:latest",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate",
    "db:status": "npx sequelize-cli db:migrate:status",
    "lint": "eslint '**/*.ts'",
    "precommit": "npm run lint",
    "start": "npm run build:ts && node dist/index.js",
    "test": "./bin/prepareDbForTest.sh jest",
    "watch:ts": "tsc -w"
  },
  "keywords": [
    "api",
    "koa.js",
    "node.js",
    "typescript",
    "db",
    "sequelize"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanbueno/koa-typescript-with-db.git"
  },
  "author": "Alan Bueno",
  "license": "ISC",
  "engines": {
    "node": "10.15.13",
    "npm": "6.9.0"
  },
  "dependencies": {
    "@admin/utils": "file:./src/utils",
    "@hapi/boom": "^9.0.0",
    "@hapi/joi": "^17.1.1",
    "@sentry/node": "^5.12.4",
    "config": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fs": "0.0.1-security",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "path": "^0.12.7",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@sentry/typescript": "^5.14.2",
    "@types/boom": "^7.3.0",
    "@types/config": "0.0.34",
    "@types/jest": "^26.0.9",
    "@types/koa-router": "^7.0.40",
    "@types/node": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "nyc": "^15.0.0",
    "prettier": "1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/**/*.ts"
    ],
    "require": [
      "babel-register"
    ],
    "exclude": [
      "packages/**/*"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": false
  }
}
